<div class="container">
    <div class="container">
        <div class="jumbotron bannerHeader" id="topicHeader">
            <h1 class="display-4"> <%=@topic.topic_name %> </h1>
            <p class="lead">
                Each topic has its own description to introduce you to what they do and what they can answer.
            </p>
        </div>     
    </div>
</div>

<div class="container" id="topic-questions-container">
    <div class="questionContent">
      <% @topic.questions.by_date.each do |question| %>
        <div class="question-information">
          <div class="question-info">
            <div class="answer-quantity">
              <%= question.answers.count %>
            </div>
            <div>
              answers
            </div>
          </div>
          <div>
            <div class="questionTitle">
              <%= link_to question.question_title, question_path(question), class: "link-to-question"%>
            </div>
            <p class="questionText">
              <%= question.question_text %>
            </p>
            <small class="user-info">
              <%= question_show_timestamp(question) %>
            </small>
          </div>
        </div>
        <hr>
      <% end %>
    </div>
</div>
