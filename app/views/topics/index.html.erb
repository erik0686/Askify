<div class="container">
    <div class="container">
        <div class="jumbotron bannerHeader" id="categoryHeader">
            <div class="suggest-topic-container">
                <span class="lead">
                    Not finding what you're looking for?
                </span>
                <%= link_to "Suggest new topic", "#new-topic-modal", "data-toggle" => "modal", class: "lead suggest-topic"%>        
            </div>
            <h1 class="display-4">Category Name</h1>
            <p class="lead">
                Explore the different topics in each category. Topics can cover many questions you may have.
            </p>
        </div>
    </div>
</div>

<div class="container" id="topic-cards-container">
    <div class="row bg-white">
        <% @topics.each do |t| %>
            <div class="col-lg-3 col-category">
                <%= link_to :topic => t.id do %>
                    <div class="card card-topic mb-3%>">
                            <%= image_tag("topics/" + t.id.to_s+ ".jpeg", class: "card-img-top imgCategory", alt: "t.topic_name", style: "height: 100%;")%>
                            <div class="card-body">
                                <h5 class="card-title lead">
                                    <%= t.topic_name %>
                                </h5>
                            </div>
                        </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
