<div class="container" id="listPosts">

    <div class="sticky-top">
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" id="searchPost" placeholder="Search" aria-label="Search">
        </form>
    </div>

    <ul id="posts" class="list-group list-group-flush">

        <% @posts.each do |post| %>
            <li class="list-group-item flex-column">
                <div class="d-flex w-100 justify-content-between">
                    <small>Just now</small>
                </div>
                <p class="mb-1">
                    <%= post.post_content %>
                </p>
                <%= image_tag("testing/testPost.jpg", class: "imgSize", alt: "eventImage") if post.id == 2 %>
            </li>
        <% end %>

    </ul>
</div>