<div id="new-topic-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header modal-header">
                <h5 id="new-topic-modal-title" class="modal-title lead">Suggest new topic</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="new-topic-modal-body">
                <div class="container new-topic">
                    <p>Type the name of the topic you want to suggest</p>
                    <div class="input-group mb-3 new-question-topic">
                        <%= text_field_tag 'new_topic_name', nil, class: 'form-control lead', data: { autocomplete_source: set_topic_options_path } %> 
                    </div>
                    <p>Choose the category it corresponds to</p>
                    <div class="form-group mb-3">
                        <select class="form-control lead">
                            <% @categories.each do |category| %>
                                <option class="lead"> <%= category.category_name %> </option> 
                            <% end %>
                        </select>
                    </div>
                    <p>Write a brief description about the topic</p>
                    <div class="form-group mb-3">
                        <textarea class="form-control lead" id="exampleFormControlTextarea1" rows="3" placeholder="Write one or two sentences about this topic..."></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer new-question-topic">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary btn-suggest">Submit Suggestion</button>
            </div>
        </div>
    </div>
</div>

<div id="new-question-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
       <div class="modal-header modal-header-no-line">
          <h5 id="new-question-modal-title" class="modal-title"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="new-question-modal-body-footer"></div>
    </div>
  </div>
</div>

<div id="new-question-first-body" class="new-question-body">
  <div id="new-question-first-body-content">
    <div class="modal-body modal-body-no-top-padding">
      <div class="container-fluid">
        <%= form_tag set_new_question_category_path do %>
          <div class="row bg-white">
            <% @categories.each do |category| %>
              <div class="col-sm-6 col-category">
                <label class="card card-category mb-3">
                  <%= radio_button_tag 'category_name', category.category_name, true, class: "category_input", :onclick => "this.form.submit();" %>
                  <%= image_tag("categories/" + category.id.to_s+ ".jpeg", class: "card-img-top imgCategory", alt: "category.category_name")%>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= category.category_name %>
                    </h5>
                  </div>
                </label>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="new-question-second-body" class="new-question-body">
  <div id="new-question-second-body-content">
    <%= form_tag create_new_question_path, :id => 'create-new-question-form' do %>
      <div class="modal-body modal-body-no-top-padding">
        <div class="input-group mb-3 new-question-topic">
          <%= text_field_tag 'topic_name', nil, class: 'form-control', required: 'true', data: { autocomplete_source: set_topic_options_path } %> 
        </div>
        <div class="input-group mb-3 new-question-question">
          <%= text_field_tag 'question_title', nil, class: 'form-control', required: 'true', minlength: "20", placeholder: "Question Title" %>
        </div>
        <div class="input-group mb-3 new-question-question">
          <%= text_area_tag 'question_text', nil, class: 'form-control', rows: 6, required: 'true', placeholder: "Type here some extra content for the question if needed..." %>
        </div>
      </div>
      <div class="modal-footer new-question-topic">
        <button type="button" class="btn btn-warning mr-auto btn-back">Back</button>
        <button type="button" class="btn btn-primary btn-continue">Continue</button>
      </div>
      <div class="modal-footer new-question-question">
        <button type="button" class="btn btn-warning mr-auto btn-back">Back</button>
        <%= submit_tag "Post!", class: "btn btn-success btn-continue" %>
      </div>
    <% end %>
  </div>  
</div>
