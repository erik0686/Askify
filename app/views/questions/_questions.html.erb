<div style="margin-left: 5rem;">  
  <div class="container titleHome">
      <h3 class="display-4 home">Questions</h3> 
  </div>
  <div class="dropdown-divider questions"></div>
  <% @questions.each do |question| %>
    <div class="question-information">
      <div class="question-info">
        <div class="answer-quantity">
          <%= question.answers.count %>
        </div>
        <div>
          answers
        </div>
      </div>
      <div>
        <div>
          <%= link_to question.question_title, question_path(question), class: "link-to-question", onClick:"$('#homeQuestions').resizable('destroy')"%>
        </div>
        <div class="user-info">
          <%= answer_timestamp(question) %>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
</div>