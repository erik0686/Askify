<nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top navbar-color">
    <a class="navbar-brand" href="/" >
      <%=image_tag("brand/SingleLogoWhite.png", class: "navbar-img", alt: "Askify-Logo") %>
    </a>

    <button id="navbar-toggler" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContentCollapsable" aria-controls="navbarContentCollapsable" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarContentCollapsable">

      <ul class="nav navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Ask something!", "#new-question-modal", "data-toggle" => "modal", class: "nav-link lead", id:"linkQuestion"%>
        </li>
      </ul>

      <ul class="nav navbar-nav ml-auto">
        <li class="nav-item mr-3">
          <%= link_to "Home", "/", class: "nav-link lead", id:"navbarHomeButton" %>
        </li>

        <li class="nav-item dropdown mr-3">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCategories" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
             Categories
          </a>

          <div id="dropdown-menu-categories" class="dropdown-menu dd-menu" aria-labelledby="navbarDropdownCategories">
            <% @categories.each do |category| %>
              <%= link_to category.category_name, category_path(category), class: "dropdown-item" %>
            <% end %>
            <div class="dropdown-divider"></div>
            <%= link_to "All", categories_path, class: "dropdown-item" %>
          </div>
        </li>

        <li class="nav-item dropdown mr-3">
          <a class="nav-link dropdown-toggle lead" href="#" id="navbarDropdownOptions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_user.first_name %> 
            <!-- En lugar de 1+3 se debe obtener la cantidad de preguntas y respuestas no leidas -->
          </a>

          <div id="dropdown-menu-options" class="dropdown-menu dd-menu" aria-labelledby="navbarDropdownOptions">
            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to(user_path(current_user), class:"dropdown-item") do %>
              My questions   <span class="badge badge-secondary"><%= current_user.questions.count %></span>
              <!-- En lugar de 1 se debe obtener la cantidad de preguntas no leidas -->
            <% end %>
            <%= link_to(user_path(current_user), class:"dropdown-item") do %>
              My answers   <span class="badge badge-secondary"><%= current_user.answers.count %></span>
              <!-- En lugar de 1 se debe obtener la cantidad de respuestas no leidas -->
            <% end %>
            <div class="dropdown-divider"></div>
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
</nav>

<div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
