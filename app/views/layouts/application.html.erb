<!DOCTYPE html>
<html>
  <head>
    <title>Askify</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag 'brand/favicon.ico' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "layouts/navbar" %>
    <% end %>
    
    <div style="height:100%;">
      <%= yield %>
    </div>
    
    <%= render "questions/new_first", question: @question %>
    <%= render "questions/new_second", question: @question %>

  </body>
</html>
